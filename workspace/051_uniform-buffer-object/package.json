{
  "name": "PaleGL",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host --force",
    "dev:watch": "vite --watch",
    "build:staging": "tsc && vite build --force --mode staging",
    "build:watch": "vite build --watch",
    "build:production": "tsc && vite build --force",
    "build:demo": "tsc && vite build --force --mode demo && npm run pack",
    "preview": "vite preview",
    "serve:dist": "cd dist && python3 -m http.server 8000",
    "lint": "eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "pack": "node bin/pack.js"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "node-zopfli": "^2.1.4",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tempy": "^3.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-checker": "^0.6.1",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-gltf": "^3.1.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-singlefile": "^0.13.5",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@types/rollup": "^0.54.0",
    "glob": "^10.3.3",
    "rollup": "^3.28.0",
    "terser": "^5.19.2",
    "ws": "^8.14.2"
  }
}
