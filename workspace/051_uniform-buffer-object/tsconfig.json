{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    // // write .d.ts files
    // "rootDir": "./src",
    // "outDir": "types",
    // "declaration": true,
    // "emitDeclarationOnly": true,

    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "vite/client",
      "vite-plugin-glsl/ext"
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "preserveConstEnums": false,
    "moduleSuffixes": [
      "glsl",
      "shader",
      ""
    ]
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    // "sandbox/**/*.ts",
    "demos/**/*.ts",
    "vite.config.ts",
    "vite-**-plugin.ts",
    "marionetter-server/**/*.ts",
    "node-libs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin/**/*.js",
    "marionetter-server/**/*.js"
  ]
}
